<Window x:Class="ForBelfort.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Имя пользователя:"/>
            <TextBox x:Name="UserNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10"/>

            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Height="40" Background="#808080" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
